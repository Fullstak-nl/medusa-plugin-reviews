{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "CommonJS",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "target": "es2017",
        "sourceMap": true,
        "skipLibCheck": true,
        "allowJs": false ,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ]
}
